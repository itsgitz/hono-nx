{
  "$schema": "https://json-schema.org/schema",
  "$id": "App",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the application? (e.g., api)"
    },
    "directory": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 1
      },
      "x-prompt": "In which directory should the application be created? (Leave blank for 'apps/')"
    },
    "port": {
      "type": "number",
      "description": "",
      "default": 3000,
      "x-prompt": "Which port should the application use?"
    }
  },
  "required": [
    "name"
  ]
}
